# Demo identity
DEMO_WALLET_ADDRESS=0xDEMO_WALLET_ADDRESS
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=
NEXT_PUBLIC_TOPUP_TREASURY_ADDRESS=
# Optional server-side override (if unset, NEXT_PUBLIC_TOPUP_TREASURY_ADDRESS is used).
TOPUP_TREASURY_ADDRESS=

# 0G Storage
# Set to "real" for hackathon/judge deployments so publishes include on-chain proof.
ZERO_G_STORAGE_MODE=real
ZERO_G_STORAGE_INDEXER_RPC=https://indexer-storage-testnet-turbo.0g.ai
# Keep false for judge-facing deployments. If true, failed real uploads can fall back to mock.
ZERO_G_STORAGE_FALLBACK_TO_MOCK=false
# Optional: auto-run storage sync on homepage requests. Keep false to avoid repeated on-chain submissions.
ZERO_G_AUTO_SYNC_STORAGE_ON_HOME=false

# 0G Compute
# Set to "real" to use 0G Compute broker.
# If not "real" and OPENROUTER_API_KEY is set, chat runs through OpenRouter.
# If neither is configured, mock responses are returned.
ZERO_G_COMPUTE_MODE=real
ZERO_G_COMPUTE_PROVIDER=
ZERO_G_COMPUTE_MODEL=qwen/qwen-2.5-7b-instruct
OPENROUTER_API_KEY=
# Optional model used when selected model is "openrouter/free" or image-only.
OPENROUTER_DEFAULT_MODEL=meta-llama/llama-3.2-3b-instruct:free

# Shared blockchain configuration for 0G SDKs
ZERO_G_EVM_RPC=https://evmrpc-testnet.0g.ai
ZERO_G_PRIVATE_KEY=

# Payments webhook (optional). If set, /api/webhooks/payments requires matching x-webhook-secret header.
PAYMENTS_WEBHOOK_SECRET=
